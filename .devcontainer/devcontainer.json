{
  "name": "AI_BEMS(py312-slim, CPU)",
  "image": "python:3.12-slim",
  "remoteUser": "root",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "runArgs": [
    "--init",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=pipcache,target=/root/.cache/pip,type=volume"
  ],
  "postCreateCommand": "apt-get update && apt-get install -y git curl libgomp1 && python -m pip install --upgrade pip setuptools wheel && pip install --no-cache-dir -r /workspace/requirements.txt",
  "forwardPorts": [8000, 8888],
  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-azuretools.vscode-docker",
        "mechatroner.rainbow-csv",
        "RandomFractalsInc.vscode-data-preview",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-vscode-remote.remote-wsl"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "jupyter.notebookFileRoot": "/workspace",
        "jupyter.allowImportFromNotebook": true
      }
    }
  }
}
